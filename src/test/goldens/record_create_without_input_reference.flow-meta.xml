<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
  <apiVersion>64.0</apiVersion>
  <label>Test Record Create Without Input Reference</label>
  <processType>Flow</processType>
  <start>
    <locationX>0</locationX>
    <locationY>0</locationY>
    <connector>
      <targetReference>create_property</targetReference>
    </connector>
  </start>
  <recordCreates>
    <name>create_property</name>
    <label>Create Property</label>
    <locationX>666</locationX>
    <locationY>638</locationY>
    <connector>
      <targetReference>success_screen</targetReference>
    </connector>
    <faultConnector>
      <targetReference>error_creating_records</targetReference>
    </faultConnector>
    <inputAssignments>
      <field>Name</field>
      <value>
        <stringValue>Test Property</stringValue>
      </value>
    </inputAssignments>
    <inputAssignments>
      <field>Status__c</field>
      <value>
        <stringValue>Available</stringValue>
      </value>
    </inputAssignments>
    <!-- Note: No inputReference field - this is the case we're testing -->
    <object>Property__c</object>
    <storeOutputAutomatically>true</storeOutputAutomatically>
  </recordCreates>
  <screens>
    <name>success_screen</name>
    <label>Success</label>
    <locationX>666</locationX>
    <locationY>758</locationY>
  </screens>
  <screens>
    <name>error_creating_records</name>
    <label>Error creating records</label>
    <locationX>1458</locationX>
    <locationY>758</locationY>
  </screens>
</Flow>
